---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "About me";
const identity = {
  firstName: "Bartek",
  country: "Canada",
  occupation: "Technical Writer",
  hobbies: ["snowboard", "birdwatching", "baseball"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];

const happy = true;

const skillColor = "navy";
const fontWeight = "bold";
---

<BaseLayout pageTitle={pageTitle}>
  <h1>My Astro Site</h1>

  <h2>My name is {identity.firstName}</h2>

  <p>I am working through Astro's introductory tutorial. My skills are {skills.map((skill) => <li class="skill">{skill}</li>)}</p>

  {happy && <p>It says if im happy</p>}
</BaseLayout>
